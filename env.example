# Legal Intel Dashboard Environment Configuration
# Copy this file to .env for local development
# cp env.example .env

# Database Configuration
POSTGRES_DB=legal_intel
POSTGRES_USER=legal_user
POSTGRES_PASSWORD=legal_pass123
DATABASE_URL=postgresql://legal_user:legal_pass123@postgres:5432/legal_intel

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_EXTERNAL_URL=redis://localhost:3030

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=legal-documents
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_LOG_LEVEL=info

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379
CELERY_RESULT_BACKEND=redis://redis:6379
CELERY_WORKER_CONCURRENCY=8
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# Security (Change these in production!)
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=["*"]
ALLOWED_HOSTS=["*"]

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Development Settings
ENVIRONMENT=development
LOG_LEVEL=info 